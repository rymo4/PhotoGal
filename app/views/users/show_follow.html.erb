<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>

      <% unless @users.empty? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= name(@user) %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Photos</strong> <%= @user.photos.count %>
    
      
    </td>
  </tr>
</table>