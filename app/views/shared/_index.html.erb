<% if signed_in?%>

		<h1>Listing photos</h1>

		
<%= paginate @photos %>
		
  
	<% unless @photos.nil?%>
		<% @photos.each do |photo| %>
		<table class="listedpic">
			<tr>
				<th><%= photo.title %></th>
			</tr>
		  <tr>
    
		    <td><center><%= link_to image_tag (photo.image_url(:collage).to_s), photo %></center></td>
			</tr>
			<tr>
			<td>
				<center>
				<%if photo.user_id==current_user.id%>
					<%= link_to 'Edit', edit_photo_path(photo) %> 
					<%= link_to 'Delete', photo, :confirm => 'Are you sure?', :method => :delete %></td>
				<%end%>
				</center>
		  </td>
   
		  </tr>
		</table>
		<% end %>
		

		<br />
		<%else%>
		<h1>There are no photos yet!</h1>
		<%end%>
<%else%>
<%= render 'shared/signin'%>
<%end%>


